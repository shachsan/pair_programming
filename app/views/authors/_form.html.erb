<% if @author.errors.any? %>
  <ul>
  <% @author.errors.full_messages.each do |message| %>
  <li> <%= message %> </li>
  <% end %>
</ul>
<%end%>

<%= form_for @author do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :birth_year %>
<%= f.text_field :birth_year %>
<%= f.submit %>
<% end %>
